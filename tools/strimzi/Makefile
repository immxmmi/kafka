	@kubectl create -f 'https://strimzi.io/install/latest?namespace=kafka' -n kafka
	#@kubectl apply -f ./app/
	@echo -e "$(GREEN)âœ… Strimzi Operator Application has been applied via ArgoCD.$(NC)"

